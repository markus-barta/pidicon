{
  "name": "pixoo-daemon",
  "version": "2.1.0",
  "main": "daemon.js",
  "scripts": {
    "start": "node daemon.js",
    "build": "npm run build:version && npm run ui:build",
    "build:version": "node scripts/build-version.js",
    "ui:dev": "vite",
    "ui:build": "vite build",
    "ui:preview": "vite preview",
    "ui:test": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "lint:errors": "eslint . --quiet -f codeframe || true",
    "md:lint": "markdownlint \"**/*.md\" --ignore node_modules --ignore .cursor/rules/cursor-rules.mdc --ignore docs/reports",
    "md:fix": "markdownlint \"**/*.md\" --fix --ignore node_modules --ignore .cursor/rules/cursor-rules.mdc --ignore docs/reports",
    "test": "node --test",
    "coverage": "c8 npm test",
    "coverage:report": "c8 report --reporter=text",
    "hooks:setup": "husky init"
  },
  "dependencies": {
    "@mdi/font": "^7.4.47",
    "@vitejs/plugin-vue": "^5.2.4",
    "chart.js": "^4.5.0",
    "echarts": "^6.0.0",
    "express": "^5.1.0",
    "mqtt": "^5.9.0",
    "pinia": "^3.0.3",
    "pngjs": "^7.0.0",
    "sharp": "^0.33.5",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "suncalc": "^1.9.0",
    "vite": "^5.4.0",
    "vite-plugin-vuetify": "^2.1.2",
    "vue": "^3.5.0",
    "vue-echarts": "^8.0.0",
    "vuetify": "^3.7.0",
    "ws": "^8.18.3"
  },
  "lint-staged": {
    "*.{js,mjs,cjs,jsx}": [
      "eslint --fix",
      "prettier -w"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier -w"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@vue/test-utils": "^2.4.0",
    "c8": "^10.1.3",
    "eslint": "^9.5.0",
    "eslint-formatter-codeframe": "^7.32.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-promise": "^6.2.0",
    "happy-dom": "^15.0.0",
    "jsdoc": "^4.0.5",
    "jsdoc-to-markdown": "^9.1.3",
    "lint-staged": "^15.5.2",
    "vitest": "^2.0.0"
  }
}
