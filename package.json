{
  "name": "pixoo-daemon",
  "main": "daemon.js",
  "scripts": {
    "start": "node daemon.js",
    "build:version": "node scripts/build-version.js",
    "prestart": "npm run build:version",
    "lint": "eslint .",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "lint:errors": "eslint . --quiet -f codeframe || true",
    "md:lint": "markdownlint \"**/*.md\" --ignore node_modules",
    "test": "node --test",
    "coverage": "c8 npm test",
    "hooks:setup": "husky init"
  },
  "dependencies": {
    "mqtt": "^5.9.0",
    "sharp": "^0.33.5"
  },
  "lint-staged": {
    "*.{js,mjs,cjs,jsx}": [
      "eslint --fix",
      "prettier -w"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier -w"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "eslint-formatter-codeframe": "^7.32.1",
    "lint-staged": "^15.5.2"
  }
}
