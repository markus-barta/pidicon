#!/usr/bin/env sh
ssh mba@miniserver24 bash -lc 'prev=$(docker inspect -f "{{.Image}}" pixoo-daemon 2>/dev/null || echo unknown); docker compose -f /home/mba/docker/docker-compose.yml up -d watchtower-pixoo; end=$((SECONDS+300)); while [ $SECONDS -lt $end ]; do cur=$(docker inspect -f "{{.Image}}" pixoo-daemon 2>/dev/null || echo unknown); if [ "$cur" != "$prev" ] && [ "$cur" != "unknown" ]; then docker compose -f /home/mba/docker/docker-compose.yml stop watchtower-pixoo; exit 0; fi; sleep 5; done; docker compose -f /home/mba/docker/docker-compose.yml stop watchtower-pixoo'
